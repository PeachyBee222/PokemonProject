@page
@model Website.Pages.AddPokemonModel
@{
    ViewData["Title"] = "Add Your Pokémon";
}
<div class="page-format">
    <div class="slogan">
        <div class="slogan-more">
            <h1 class="add-pokemon-title create-add-title">@ViewData["Title"]</h1>
            <div class="call-to-action">
                <spans class="slogan-catch">Go back to home</spans>
                <div class="slogan-whitespace"></div>
                <div class="slogan-arrow">
                    <img src="~/Images/arrow.png" width="100" height="60" />
                </div>
                <div class="button">
                    <a class="slogan-button" asp-area="" asp-page="/Pokemon">Pokémon Awaits</a>
                </div>
            </div>
        </div>
    </div>
    <div class="add-pokemon-desc create-add-desc">
        <div class="add-pokemon-page create-add-page">
            <h2>Enter in Information</h2>
            <div class="add-pokemon-input create-add-input">
                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" name="email" placeholder="Enter Here" style="background-color: #030027" />
                </div>
                <div class="input-group">
                    <label>Nickname: </label>
                    <input type="text" name="nickname" placeholder="Enter Here" style="background-color: #030027" />
                </div>
                <div class="input-group">
                    <label>Pokemon ID: </label>
                    <input type="number" name="pokemonid" min="0" max="10000" placeholder="Enter Here" style="background-color: #030027" /> <!-- FIXME the Max-->
                </div>
                <!-- FIXME will need error checking on input information-->
                <div class="input-button input-group">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </div>
        <div class="logo-main">
            <img class="main-logo" src="~/Images/pokemoncreate.png" width="850" height="600" />
        </div>
    </div>
</div>